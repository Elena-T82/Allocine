<!--Carroussel informations-->

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="img/cinema.jpg" alt="Cinéma">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="img/constantine.jpg" alt="Film constantine">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="img/yoda.jpg" alt="Star Wars">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<!--Contenu page-->

<h1>Les dernières sorties</h1>


<!--Première rangée de sortie de films-->
<div class="card-group">
    <div class="row">
        {{#each films.results}}

        <div class="col-4">
            <div class="card">
                <!--Image du film-->
                <img class="card-img-top" src="https://image.tmdb.org/t/p/w500{{this.poster_path}}" alt="Card image cap">
                <div class="card-body">
                    <!--Info film : Titre + texte-->
                    <a href="/fiche_film/{{this.id}}">
                        <h5 class="card-title">{{this.original_title}}</h5>
                    </a>
                    <p class="card-text">{{this.overview}}</p>
                    <p class="card-text"><small class="text-muted">Date de sortie : {{this.release_date}}</small></p>
                </div>
            </div>
        </div>
        {{!--
        <li>{{this.overview}}</li> --}} {{!-- {{#each this.genre_ids}}
        <li>{{this}}</li>
        {{/each}} --}} {{/each}}
    </div>

</div>